<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.MainActivity">
    <FrameLayout
            android:id="@+id/fl_main"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/banner_main"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                tools:visibility="gone">

            <ImageView
                    android:id="@+id/iv_load_main"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    tools:src="@drawable/fx_loading"
                    android:layout_gravity="center"
                    android:contentDescription="@string/default_content_description"/>

            <TextView
                    android:id="@+id/tv_load_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/loading_content"
                    android:textStyle="bold"/>
        </LinearLayout>

        <TextView
                android:id="@+id/tv_owner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/by_owner"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                app:drawableEndCompat="@drawable/cs_logo"
                android:drawablePadding="8dp"
                tools:visibility="visible"/>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_main_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:visibility="gone">

            <Button
                    android:id="@+id/btn_menu_set"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/menu_prime_sets"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/pb_overall_bg"
                    app:layout_constraintEnd_toEndOf="parent"/>

            <Button
                    android:id="@+id/btn_menu_other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/menu_other_prime"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btn_menu_set"
                    app:layout_constraintEnd_toEndOf="parent"/>

            <Button
                    android:id="@+id/btn_menu_relic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/menu_relics"
                    app:layout_constraintTop_toBottomOf="@+id/btn_menu_other"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

            <ImageView
                    android:id="@+id/btn_menu_help"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_help"
                    android:layout_gravity="end"
                    app:tint="?attr/colorPrimary"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            <ProgressBar
                    android:id="@+id/pb_overall_bg"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:indeterminate="false"
                    android:max="100"
                    android:progress="100"
                    android:progressDrawable="@drawable/stats_full"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            <ProgressBar
                    android:id="@+id/pb_overall_progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    tools:max="150"
                    tools:progress="75"
                    android:progressDrawable="@drawable/stats_progress"
                    app:layout_constraintBottom_toBottomOf="@id/pb_overall_bg"
                    app:layout_constraintEnd_toEndOf="@id/pb_overall_bg"
                    app:layout_constraintStart_toStartOf="@id/pb_overall_bg"
                    app:layout_constraintTop_toTopOf="@id/pb_overall_bg"/>
            <ProgressBar
                    android:id="@+id/pb_overall_completed"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    tools:max="150"
                    tools:progress="50"
                    android:progressDrawable="@drawable/stats_completed"
                    app:layout_constraintBottom_toBottomOf="@id/pb_overall_bg"
                    app:layout_constraintEnd_toEndOf="@id/pb_overall_bg"
                    app:layout_constraintStart_toStartOf="@id/pb_overall_bg"
                    app:layout_constraintTop_toTopOf="@id/pb_overall_bg"/>

            <TextView
                    android:id="@+id/tv_progress_overall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/overall_stats"
                    android:textSize="12sp"
                    android:gravity="center"
                    app:layout_constraintEnd_toEndOf="@+id/pb_overall_bg"
                    app:layout_constraintStart_toStartOf="@+id/pb_overall_bg"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/btn_menu_set"/>

            <TextView
                    android:id="@+id/tv_app_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="v8.8.8"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
    <RelativeLayout
            android:id="@+id/banner_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>