<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/tv_other_comp"
            app:layout_constraintTop_toTopOf="@+id/tv_other_comp"
            android:layout_marginTop="-8dp"
            android:layout_marginEnd="-8dp"
            tools:src="@drawable/check_circle"
            android:id="@+id/iv_other_comp"
            android:contentDescription="@string/default_content_description"/>

    <TextView
            android:id="@+id/tv_other_comp"
            tools:text="@string/comp_blueprint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/tv_other_comp_relics"
            app:layout_constraintStart_toStartOf="@+id/tv_other_comp_relics"
            tools:drawableTopCompat="@drawable/prime_blueprint"/>

    <TextView
            android:id="@+id/tv_other_comp_relics"
            tools:text="Meso M99\nMeso M99\nMeso M99"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/relic_background"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_other_comp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>